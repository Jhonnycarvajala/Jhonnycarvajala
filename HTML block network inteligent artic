<script>

#contextocss
#contextoc++

	var txt = document.getElementById('text')
	var btn = document.getElementById('btn')
	var msgbox = document.querySelector('.panel-body')
	btn.addEventListener('click',() => {


		let myself = document.createElement('p')
		myself.innerHTML = '>> dije:' + this.txt.value
		msgbox.appendChild(myself)


		let child = document.createElement('p')
		child.innerHTML =  this.txt.value.replace(/ You / g,'YO').replace(/?/GRAMO,'').replace(/\?/g,'！').replace(/？/g,'！')
		msgbox.appendChild(child)


		this.txt.value = ''

	})

	txt.addEventListener('keydown',(e)=>{
		if (e.keyCode==13) {
			this.btn.click()
		}
	})
</script>
